%li{id: feed_item.id}
  = link_to gravatar_for(feed_item.user), feed_item.user
  %span.user
    = link_to feed_item.user.name, feed_item.user
    .nick.inline= at_nick feed_item.user
  %span.content= feed_item.content
  %span.timestamp
    = t('microposts.micropost.posted', time: time_ago_in_words(feed_item.created_at))
  = render partial: 'shared/delete_post', locals: { post: feed_item }
