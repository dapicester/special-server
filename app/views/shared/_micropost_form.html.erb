<% content_for :head do %>
  <%= javascript_include_tag 'counter' %>
<% end %>

<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t('microposts.micropost.placeholder'), 
                              id: "micropost_form" %>
  </div>
  <%= f.submit t('microposts.micropost.button'), class: "btn btn-large btn-primary" %>
  <div id="counter" class="counter float-right"></div>
<% end %>
