<h2>Log in</h2>
<%= form_for :user do |f| %>
  <fieldset>
    <legend>Enter your details</legend>

    <div class="form_row">
      <%= f.label :screen_name %>
      <%= f.text_field :screen_name, 
                       :size => User::SCREEN_NAME_SIZE, 
                       :maxlength => User::SCREEN_NAME_MAX_LENGTH %>
    </div>
    <div class="form_row">
      <%= f.label :password %>
      <%= f.password_field :password,
                           :size => User::PASSWORD_SIZE,
                           :maxlength => User::PASSWORD_MAX_LENGTH %>
    </div>
  
    <div class="form_row">
      <%= submit_tag "Login" %>
    </div>
  </fieldset>
<% end %>

<p>Not a member? <%= link_to "Register now!", :action => "register" %></p>

