- provide :title, t('.title')
%h1= t('.title')

.row
  .span6.offset3
    = form_tag sessions_path do
      = label_tag :email, t('.login')
      = text_field_tag :email, params[:email]

      = label_tag :password
      = password_field_tag :password

      = label_tag :remember_me, class: 'checkbox' do
        = check_box_tag :remember_me, params[:remember_me]
        = t('.remember_me')

      = submit_tag t('.button'), class: 'btn btn-large btn-primary'
    %p
      = t('new_user')
      = link_to t('signup_now'), signup_path
    %p
      = link_to t('.forgot'), new_password_reset_path
