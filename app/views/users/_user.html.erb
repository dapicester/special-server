<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to t('users.delete.button'), user, 
        method: :delete, confirm: t('users.delete.confirm'),
        class: "btn btn-mini btn-danger float-right" %>
  <% end %>
</li>
