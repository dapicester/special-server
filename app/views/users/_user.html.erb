<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "delete", user, method: :delete, confirm: "Are you sure?",
                                 class: "btn btn-mini btn-danger float-right" %>
  <% end %>
</li>
