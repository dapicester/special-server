- provide :title, t('.title')
%h1= t('.title')

.row.top-nav
  .pull-left
    = paginate @users unless @users.empty?
  .pull-right.span4
    = form_tag search_users_path, method: :get, class: 'form-search' do
      = text_field_tag :query, params[:query], class: 'input-medium search-query'
      = submit_tag t('.search'), name: nil, class: 'btn'

%ul.users
  = render @users

= paginate @users unless @users.empty?
