.row
  %aside.span4
    %section
      = gravatar_for @user
      %h1= @user.name
      %span= link_to t('users.show.profile'), @user
      %span
        %strong #{t('users.show.microposts')}:
        = @user.microposts.count
    %section
      = render 'shared/stats'
      - unless @users.empty?
        .user_avatars
          - @users.each do |user|
            = link_to gravatar_for(user, size: 30), user
  .span8
    %h3= yield(:title)
    - if @users.any?
      %ul.users
        = render @users
      = paginate @users, remote: true
