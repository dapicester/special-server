<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to logo + "  " + t('workplaces'), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <%= render 'layouts/locale_switcher' %>
          <li><%= link_to t('static_pages.home.title'), root_path %></li>
          <li><%= link_to t('static_pages.help.title'), help_path %></li>
          <% if signed_in? %>
            <li><%= link_to t('.users'), users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.profile'), current_user %></li>
                <li><%= link_to t('.settings'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to t('sessions.destroy'), signout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('sessions.new.title'), signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
